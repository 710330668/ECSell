<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40000000">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tl="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="298dp"
        android:layout_gravity="bottom"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="分享文案"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <FrameLayout
            android:id="@+id/fm_article_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="@dimen/dimens_48dp"
            android:background="@drawable/bg_edittext" />

        <com.flyco.tablayout.CommonTabLayout
            android:id="@+id/mainTabBar"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            app:layout_constraintLeft_toLeftOf="@id/fm_article_root"
            app:layout_constraintRight_toRightOf="@+id/fm_article_root"
            app:layout_constraintTop_toTopOf="@+id/fm_article_root"

            app:tl_textSelectColor="@color/color_FF5754"
            app:tl_textUnselectColor="@color/color_333333"
            tl:tl_underline_height="5dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="#F5F5F5"
            app:layout_constraintLeft_toLeftOf="@+id/fm_article_root"
            app:layout_constraintRight_toRightOf="@+id/fm_article_root"
            app:layout_constraintTop_toBottomOf="@+id/mainTabBar" />

        <EditText
            android:id="@+id/et_share_article"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/drawable_empty"
            android:enabled="true"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:paddingTop="5dp"
            android:textColor="#333333"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/fm_article_root"
            app:layout_constraintLeft_toLeftOf="@+id/mainTabBar"
            app:layout_constraintRight_toRightOf="@+id/mainTabBar"
            app:layout_constraintTop_toBottomOf="@+id/mainTabBar" />


        <LinearLayout
            android:id="@+id/ll_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FFFFFF"
            android:paddingBottom="10dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv_to_share"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/home_bg"
                android:gravity="center"
                android:text="去分享"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_to_copy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/home_bg"
                android:gravity="center"
                android:text="复制"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>


    </android.support.constraint.ConstraintLayout>
</FrameLayout>