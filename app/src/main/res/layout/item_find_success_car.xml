<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tv_car_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:textColor="#333333"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_province_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text=""
        android:textColor="#333333"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_car_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_car_name" />


    <TextView
        android:id="@+id/tv_latest_follow_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="#333333"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/tv_car_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_province_name" />

    <ImageView
        android:id="@+id/img_checked"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginRight="14dp"
        android:src="@drawable/bg_cb_put_away_normal"
        app:layout_constraintBottom_toBottomOf="@+id/tv_latest_follow_price"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>