<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rv_top_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="门店报表"
            android:textColor="#333333"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="16dp"
            android:src="@mipmap/back" />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/rg_radio_button"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_today"
                    style="@style/vehicleheat_radio_button"
                    android:text="今日" />

                <RadioButton
                    android:id="@+id/rb_the_week"
                    style="@style/vehicleheat_radio_button"
                    android:text="本周" />

                <RadioButton
                    android:id="@+id/rb_last_month"
                    style="@style/vehicleheat_radio_button"
                    android:text="本月" />

                <RadioButton
                    android:id="@+id/rb_last_year"
                    style="@style/vehicleheat_radio_button"
                    android:text="本年" />

                <RadioButton
                    android:id="@+id/rb_last_custom"
                    style="@style/vehicleheat_radio_button"
                    android:text="自定义" />

            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F5F5F5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="14dp"
                    android:text="业绩"
                    android:textColor="#333333"
                    android:textSize="14sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="#F5F5F5" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="14dp"
                        android:text="成交"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="14dp"
                        android:text="台"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_sale_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="14dp"
                        android:layout_toLeftOf="@+id/tv_unit"
                        android:text="1"
                        android:textColor="#FF5755"
                        android:textSize="22sp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="14dp"
                            android:text="成交金额"
                            android:textColor="#333333"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_unit2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="14dp"
                            android:text="万"
                            android:textColor="#333333"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_money_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="14dp"
                            android:layout_toLeftOf="@+id/tv_unit2"
                            android:text="42.30"
                            android:textColor="#FF5755"
                            android:textSize="22sp" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F5F5F5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="14dp"
                    android:text="30天成交走势图"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <com.example.com.careasysell.view.ChartView
                    android:id="@+id/chartview"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="20dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F5F5F5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="14dp"
                    android:text="排行榜"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <RadioGroup
                    android:id="@+id/ll_tab"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/rb_sell"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="206"
                        android:button="@null"
                        android:gravity="center"
                        android:text="销售"
                        android:textColor="#333333" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#E6E6E6" />

                    <com.example.com.careasysell.view.DrawableCenterRadioButton
                        android:id="@+id/rb_client"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="103"
                        android:button="@null"
                        android:drawableRight="@drawable/drawable_left_radio_selector"
                        android:gravity="center"
                        android:text="客户数"
                        android:textColor="#333333" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#E6E6E6" />

                    <com.example.com.careasysell.view.DrawableCenterRadioButton
                        android:id="@+id/rb_daodian"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="103"
                        android:button="@null"
                        android:drawableRight="@drawable/drawable_left_radio_selector"
                        android:gravity="center"
                        android:text="到店"
                        android:textColor="#333333" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#E6E6E6" />

                    <com.example.com.careasysell.view.DrawableCenterRadioButton
                        android:id="@+id/rb_chengjiao"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="103"
                        android:button="@null"
                        android:drawableRight="@drawable/drawable_left_radio_selector"
                        android:gravity="center"
                        android:text="成交"
                        android:textColor="#333333" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#E6E6E6" />

                    <com.example.com.careasysell.view.DrawableCenterRadioButton
                        android:id="@+id/rb_call"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="103"
                        android:button="@null"
                        android:drawableRight="@drawable/drawable_left_radio_selector"
                        android:gravity="center"
                        android:text="打电话"
                        android:textColor="#333333" />


                </RadioGroup>


            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rl_sell_rank"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>