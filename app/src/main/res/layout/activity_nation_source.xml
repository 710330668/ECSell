<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context="com.cheeshou.cheeshou.dealer.ui.activity.StoreSearchActivity">

        <RelativeLayout
            android:id="@+id/layout_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="全国车源"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_open_put_away"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="上架车辆"
                android:textColor="#333333"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lly_search"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/layout_bar"
            app:layout_goneMarginBottom="14dp">
        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="38dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="#F2F2F2"
            android:drawableLeft="@mipmap/search"
            android:hint="`车牌型号/VIN号/车辆编号"
            android:paddingLeft="20dp"
            android:textColor="#999999"
            android:textSize="14dp"
            />

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:layout_marginRight="20dp"
            android:textSize="16sp"/>
        </LinearLayout>

        <RadioGroup
            android:id="@+id/ll_tab"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/lly_search">

            <com.cheeshou.cheeshou.view.DrawableCenterRadioButton
                android:id="@+id/rb_car_state"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="103"
                android:button="@null"
                android:drawableRight="@drawable/drawable_left_radio_selector"
                android:gravity="center"
                android:text="车辆状态"
                android:textColor="@drawable/text_color_radio_selector" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#E6E6E6" />

            <com.cheeshou.cheeshou.view.DrawableCenterRadioButton
                android:id="@+id/rb_car_order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="103"
                android:button="@null"
                android:drawableRight="@drawable/drawable_left_radio_selector"
                android:gravity="center"
                android:text="默认排序"
                android:textColor="@drawable/text_color_radio_selector" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#E6E6E6" />

            <com.cheeshou.cheeshou.view.DrawableCenterRadioButton
                android:id="@+id/rb_car_filter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="103"
                android:button="@null"
                android:drawableRight="@drawable/drawable_left_radio_filter_selector"
                android:gravity="center"
                android:text="筛选"
                android:textColor="@drawable/text_color_radio_selector" />


        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F5F5F5"
            app:layout_constraintTop_toBottomOf="@+id/ll_tab" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rl_search_result"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#F5F5F5"
            app:layout_constraintBottom_toTopOf="@+id/ll_put_away"
            app:layout_constraintTop_toBottomOf="@+id/ll_tab" />

        <LinearLayout
            android:id="@+id/ll_put_away"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FFFFFF"
            android:paddingBottom="10dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="10dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv_put_away"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/home_bg"
                android:gravity="center"
                android:text="上架选中车辆"
                android:textColor="#FFFFFF" />
        </LinearLayout>


    </android.support.constraint.ConstraintLayout>


    <LinearLayout
        android:id="@+id/layout_drawer_right"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingLeft="14dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="14dp"
                    android:gravity="center"
                    android:text="筛选"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="14dp"
                    android:background="#F5F5F5" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="地区"
                        android:textColor="@color/color_333333"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_sales_area"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/more_gray" />

                    <TextView
                        android:id="@+id/tv_sales_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="14dp"
                        android:layout_toLeftOf="@+id/iv_sales_area"
                        android:textColor="#FF5755"
                        android:textSize="14sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="14dp"
                    android:background="#F5F5F5" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="品牌"
                        android:textColor="@color/color_333333"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_car_brand"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/more_gray" />

                    <TextView
                        android:id="@+id/tv_car_brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="14dp"
                        android:layout_toLeftOf="@+id/iv_car_brand"
                        android:textColor="#FF5755"
                        android:textSize="14sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="14dp"
                    android:background="#F5F5F5" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="车型"
                        android:textColor="@color/color_333333"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_car_model"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/more_gray" />

                    <TextView
                        android:id="@+id/tv_car_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="14dp"
                        android:layout_toLeftOf="@+id/iv_car_model"
                        android:textColor="#FF5755"
                        android:textSize="14sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="14dp"
                    android:background="#F5F5F5" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="年份"
                        android:textColor="@color/color_333333"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/tv_year_all"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/ll_choose_year"
                        android:background="@drawable/bg_edittext"
                        android:gravity="center"
                        android:text="不限" />


                    <LinearLayout
                        android:id="@+id/ll_choose_year"
                        android:layout_width="114dp"
                        android:layout_height="32dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_edittext"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_last"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:padding="6dp"
                            android:src="@mipmap/last" />

                        <TextView
                            android:id="@+id/tv_year"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="2018"
                            android:textColor="#333333"
                            android:textSize="13sp" />

                        <ImageView
                            android:id="@+id/img_next"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:padding="6dp"
                            android:src="@mipmap/next" />

                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="14dp"
                    android:background="#F5F5F5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginRight="14dp"
                    android:gravity="center"
                    android:text="车源价"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="14dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:background="@drawable/bg_edit_text_selector"
                        android:gravity="center"
                        android:hint="最低价"
                        android:inputType="number"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="30dp" />

                    <EditText
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:background="@drawable/bg_edit_text_selector"
                        android:gravity="center"
                        android:hint="最高价"
                        android:inputType="number"
                        android:textSize="12sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="14dp"
                    android:background="#F5F5F5" />

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/tag_flow_price"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:max_select="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginRight="14dp"
                    android:gravity="center"
                    android:text="库存时间"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp" />

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/tag_flow_time"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    app:max_select="1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="14dp"
                    android:background="#F5F5F5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginRight="14dp"
                    android:gravity="center"
                    android:text="外观颜色"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp" />


                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/tag_flow_out_color"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    app:max_select="1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="14dp"
                    android:background="#F5F5F5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginRight="14dp"
                    android:gravity="center"
                    android:text="内饰颜色"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp" />


                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/tag_flow_inside_color"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    app:max_select="1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="14dp"
                    android:background="#F5F5F5" />

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="40dp"-->
                <!--android:layout_marginRight="14dp"-->
                <!--android:gravity="center"-->
                <!--android:text="车型"-->
                <!--android:textColor="@color/color_333333"-->
                <!--android:textSize="14sp" />-->

                <!--<com.zhy.view.flowlayout.TagFlowLayout-->
                <!--android:id="@+id/tag_flow_car_type"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="160dp"-->
                <!--app:max_select="1" />-->

                <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:layout_marginRight="14dp"-->
                <!--android:layout_marginTop="14dp"-->
                <!--android:background="#F5F5F5" />-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginRight="14dp"
                    android:gravity="center"
                    android:text="车源类型"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp" />

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/tag_flow_car_source_type"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    app:max_select="1" />

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/bt_search_reset"
                android:layout_width="131dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_edittext"
                android:text="重置" />

            <Button
                android:id="@+id/bt_search_sure"
                android:layout_width="131dp"
                android:layout_height="40dp"
                android:background="@mipmap/home_bg"
                android:text="确定" />
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>