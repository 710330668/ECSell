<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="94dp"
    android:background="#FFFFFF"
    android:paddingRight="8dp">

    <ImageView
        android:id="@+id/iv_car_poster"
        android:layout_width="88dp"
        android:layout_height="66dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_car_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:lines="1"
        android:text="雪佛兰"
        android:textColor="#333333"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/iv_car_poster"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_car_poster" />

    <TextView
        android:id="@+id/tv_car_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:lines="1"
        android:text="车源价16W"
        android:textColor="#999999"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/iv_car_poster"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_car_title" />

    <TextView
        android:id="@+id/tv_car_price_suggestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:lines="1"
        android:text="底价16W"
        android:textColor="#FF5754"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_car_poster"
        app:layout_constraintLeft_toRightOf="@id/iv_car_poster"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>