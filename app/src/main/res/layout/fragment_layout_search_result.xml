<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/ll_tab"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:orientation="horizontal">

        <com.example.com.careasysell.view.DrawableCenterRadioButton
            android:id="@+id/rb_car_state"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="103"
            android:button="@null"
            android:drawableRight="@drawable/drawable_left_radio_selector"
            android:gravity="center"
            android:text="车辆状态"
            android:textColor="#333333" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#E6E6E6" />

        <com.example.com.careasysell.view.DrawableCenterRadioButton
            android:id="@+id/rb_car_brand"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="103"
            android:button="@null"
            android:drawableRight="@drawable/drawable_left_radio_selector"
            android:gravity="center"
            android:text="品牌"
            android:textColor="#333333" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#E6E6E6" />

        <com.example.com.careasysell.view.DrawableCenterRadioButton
            android:id="@+id/rb_car_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="103"
            android:button="@null"
            android:drawableRight="@drawable/drawable_left_radio_selector"
            android:gravity="center"
            android:text="默认排序"
            android:textColor="#333333" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#E6E6E6" />

        <com.example.com.careasysell.view.DrawableCenterRadioButton
            android:id="@+id/rb_car_filter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="103"
            android:button="@null"
            android:drawableRight="@drawable/drawable_left_radio_selector"
            android:gravity="center"
            android:text="筛选"
            android:textColor="#333333" />


    </RadioGroup>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rl_search_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5" />

</LinearLayout>
