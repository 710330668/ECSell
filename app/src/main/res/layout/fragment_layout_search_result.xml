<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/ll_tab"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:orientation="horizontal">

        <com.example.com.careasysell.view.DrawableCenterRadioButton
            android:id="@+id/rb_car_state"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="103"
            android:button="@null"
            android:drawableRight="@drawable/drawable_left_radio_selector"
            android:gravity="center"
            android:text="车辆状态"
            android:textColor="#333333" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#E6E6E6" />

        <com.example.com.careasysell.view.DrawableCenterRadioButton
            android:id="@+id/rb_car_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="103"
            android:button="@null"
            android:drawableRight="@drawable/drawable_left_radio_selector"
            android:gravity="center"
            android:text="默认排序"
            android:textColor="#333333" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#E6E6E6" />

        <com.example.com.careasysell.view.DrawableCenterRadioButton
            android:id="@+id/rb_car_filter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="103"
            android:button="@null"
            android:drawableRight="@drawable/drawable_left_radio_selector"
            android:gravity="center"
            android:text="筛选"
            android:textColor="#333333" />

        <Button
            android:id="@+id/btn_car_share"
            android:layout_width="76dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:text="分享车辆"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:background="@mipmap/home_bg"
            android:layout_marginRight="12dp"
            android:visibility="gone"/>


    </RadioGroup>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rl_search_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F5F5F5" />

    <LinearLayout
        android:id="@+id/ll_put_away"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:paddingBottom="10dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_put_away"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/home_bg"
            android:gravity="center"
            android:text="分享选中车辆"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>
