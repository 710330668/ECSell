<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/back" />

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="48dp"
            android:layout_centerVertical="true"
            android:background="#F2F2F2"
            android:drawableLeft="@mipmap/search"
            android:layout_toRightOf="@+id/iv_back"
            android:paddingLeft="20dp"
            android:hint="车牌型号/VIN号/车辆编号"
            android:textColor="#999999"
            android:textSize="14dp"
            />

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:layout_marginRight="12dp"/>

    </RelativeLayout>
    
    <RadioGroup
        android:id="@+id/ll_tab"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:orientation="horizontal">

        <com.cheeshou.cheeshou.view.DrawableCenterRadioButton
            android:id="@+id/rb_default_sort"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="103"
            android:button="@null"
            android:drawableRight="@drawable/drawable_left_radio_selector"
            android:gravity="center"
            android:text="默认排序"
            android:textColor="#333333" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#E6E6E6" />

        <com.cheeshou.cheeshou.view.DrawableCenterRadioButton
            android:id="@+id/rb_sale_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="103"
            android:button="@null"
            android:drawableRight="@drawable/drawable_left_radio_selector"
            android:gravity="center"
            android:text="售出时间"
            android:textColor="#333333" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#E6E6E6" />

        <com.cheeshou.cheeshou.view.DrawableCenterRadioButton
            android:id="@+id/rb_deal_valence"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="103"
            android:button="@null"
            android:drawableRight="@drawable/drawable_left_radio_selector"
            android:gravity="center"
            android:text="成交价"
            android:textColor="#333333" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#E6E6E6" />

        <com.cheeshou.cheeshou.view.DrawableCenterRadioButton
            android:id="@+id/rb_sales"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="103"
            android:button="@null"
            android:drawableRight="@drawable/drawable_left_radio_selector"
            android:gravity="center"
            android:text="销售"
            android:textColor="#333333" />


    </RadioGroup>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rl_search_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F5F5F5" />

</LinearLayout>
