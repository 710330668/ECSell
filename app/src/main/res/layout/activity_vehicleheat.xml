<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".options.VehicleheatActivity">


    <RelativeLayout
        android:id="@+id/rv_top_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="车辆热度"
            android:textColor="#333333"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="16dp"
            android:src="@mipmap/back" />
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/rg_radio_button"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/rv_top_layout">

        <RadioButton
            android:id="@+id/rb_today"
            style="@style/vehicleheat_radio_button"
            android:text="今日" />

        <RadioButton
            android:id="@+id/rb_the_week"
            style="@style/vehicleheat_radio_button"
            android:text="本周" />

        <RadioButton
            android:id="@+id/rb_last_week"
            style="@style/vehicleheat_radio_button"
            android:text="上周" />

        <com.cheeshou.cheeshou.view.DrawableCenterRadioButton
            android:id="@+id/rb_choose_date"
            style="@style/vehicleheat_radio_button"
            android:drawableRight="@drawable/drawable_left_radio_selector"
            android:text="7月" />

    </RadioGroup>
    
    <Spinner
        android:id="@+id/spinner_month"
        android:layout_width="100dp"
        android:layout_height="wrap_content"></Spinner>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/rg_radio_button">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布车源"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/tv_release"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="5辆"
                android:textColor="#333333" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上架"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/tv_shelves"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="106次"
                android:textColor="#333333" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="61dp"
        app:layout_constraintTop_toBottomOf="@+id/rg_radio_button">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="395次"
                android:textColor="#333333" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="浏览"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/tv_browse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="865次"
                android:textColor="#333333" />
        </RelativeLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_vehicle_heat"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="201dp"
        android:background="#FFFFFF"
        android:gravity="left|center_vertical"
        android:paddingLeft="14dp"
        android:text="热度排行"
        android:textColor="#333333"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_vehicle_heat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_vehicle_heat" />


</android.support.constraint.ConstraintLayout>