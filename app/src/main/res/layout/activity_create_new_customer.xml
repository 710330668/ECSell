<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".dealer.ui.activity.CreateNewCustomerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="14dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="新建客户"
            android:textColor="#333333"
            android:textSize="16sp" />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#F5F5F5"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:text="基本信息"
                android:textColor="#333333"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_customer_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/drawable_empty"
                    android:hint="请输入客户姓名"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/ll_contacts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/contacts" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="通讯录"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="#F5F5F5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="手机"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_customer_phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/drawable_empty"
                    android:hint="请输入手机号"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="#F5F5F5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="微信"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_customer_wechat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/drawable_empty"
                    android:hint="请输入微信号"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="#F5F5F5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="性别"
                    android:textSize="14sp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="@dimen/dimens_9dp"
                        android:background="@drawable/bg_rb_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="男"
                        android:textColor="@drawable/text_color_radio_selector" />

                    <RadioButton
                        android:id="@+id/rb_customer_sex"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:background="@drawable/bg_rb_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="女"
                        android:textColor="@drawable/text_color_radio_selector" />
                </RadioGroup>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#F5F5F5"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:text="买车需求"
                android:textColor="#333333"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFFFFF"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="27dp"
                    android:gravity="center_vertical"
                    android:text="预算"
                    android:textColor="#333333" />

                <EditText
                    android:id="@+id/et_min_money"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/drawable_empty"
                    android:gravity="center"
                    android:hint="最低"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="~" />

                <EditText
                    android:id="@+id/et_max_money"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/drawable_empty"
                    android:gravity="center"
                    android:hint="最高"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="万元"
                    android:textColor="#333333"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="#F5F5F5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="品牌/车型"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tv_add_car"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="添加"
                    android:textColor="#FF5755" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_want_car"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="#F5F5F5" />

            <LinearLayout
                android:id="@+id/ll_want_car"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="意向车辆"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tv_want_car_number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="3辆"
                    android:textColor="#333333" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/more_gray" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="#F5F5F5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:text="详细需求"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/et_customer_need"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/bg_edittext"
                android:gravity="top"
                android:hint="输入需求信息"
                android:padding="@dimen/dimens_5dp"
                android:textColor="#999999"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:text="备注"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/et_customer_order"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/bg_edittext"
                android:gravity="top"
                android:hint="输入备注"
                android:padding="@dimen/dimens_5dp"
                android:textColor="#999999"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#F5F5F5"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:text="本次沟通记录"
                android:textColor="#333333"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:text="沟通方式"
                android:textColor="#333333" />

            <RadioGroup
                android:id="@+id/rg_common_type"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">


                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dimens_9dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_radiobutton_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="到店"
                    android:textColor="@drawable/text_color_radio_selector" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dimens_9dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_radiobutton_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="电话"
                    android:textColor="@drawable/text_color_radio_selector" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dimens_9dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_radiobutton_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="微信"
                    android:textColor="@drawable/text_color_radio_selector" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_radiobutton_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="短信"
                    android:textColor="@drawable/text_color_radio_selector" />
            </RadioGroup>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#F5F5F5"
                android:padding="20dp">

                <TextView
                    android:id="@+id/save_customer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/home_bg"
                    android:gravity="center"
                    android:text="保存"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </FrameLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>