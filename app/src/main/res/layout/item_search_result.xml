<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:padding="14dp">

    <ImageView
        android:id="@+id/img_car_poster"
        android:layout_width="96dp"
        android:layout_height="72dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_car_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:includeFontPadding="false"
        android:lines="2"
        android:text="雪佛兰2013款 科鲁兹 1.6LSL 天地板 MT"
        android:textColor="#333333"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/img_car_poster"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_car_poster" />

    <TextView
        android:id="@+id/tv_car_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:includeFontPadding="false"
        android:text="分享20次 | 浏览140次"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#999999"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_car_title"
        app:layout_constraintTop_toBottomOf="@id/tv_car_title" />

    <TextView
        android:id="@+id/tv_car_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:includeFontPadding="false"
        android:text="16.8万"
        android:textColor="#FE5F55"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/tv_car_title"
        app:layout_constraintTop_toBottomOf="@id/tv_car_sub_title" />

    <TextView
        android:id="@+id/tv_car_deduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:includeFontPadding="false"
        android:text="销售提成2000元"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#333333"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_car_price"
        app:layout_constraintLeft_toRightOf="@id/tv_car_price" />

    <TextView
        android:id="@+id/tv_car_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_car_state"
        android:includeFontPadding="false"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="已上架"
        android:textColor="#FF5745"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_car_sub_title"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_car_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018/06/24"
        android:textColor="#999999"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_car_deduct"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/cb_car_put_away"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginBottom="13dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/bg_cb_put_away_normal"
        android:button="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>