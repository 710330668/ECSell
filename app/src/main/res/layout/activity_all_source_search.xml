<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tl="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.cheeshou.cheeshou.dealer.ui.activity.AllSourceSearchActivity">


        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="57dp"
            android:layout_marginTop="8dp"
            android:background="#F2F2F2"
            android:drawableLeft="@mipmap/search"
            android:hint="车牌型号/VIN号/车辆编号"
            android:paddingLeft="20dp"
            android:textColor="#999999"
            android:textSize="14dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:text="取消"
            android:textColor="#999999"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/et_search"
            app:layout_constraintLeft_toRightOf="@id/et_search" />


        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/tab_search_result"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:background="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/et_search"
            app:tl_indicator_width_equal_title="true"
            app:tl_tab_space_equal="true"
            app:tl_textSelectColor="@color/color_FF5754"
            app:tl_textUnselectColor="@color/color_333333" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F5F5F5"
            app:layout_constraintTop_toBottomOf="@id/tab_search_result" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tab_search_result" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_search_history"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#F5F5F5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tab_search_result" />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/layout_drawer_right"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingLeft="14dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="14dp"
                    android:gravity="center"
                    android:text="筛选"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="14dp"
                    android:background="#F5F5F5" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="地区"
                        android:textColor="@color/color_333333"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_sales_area"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/more_gray" />

                    <TextView
                        android:id="@+id/tv_sales_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="14dp"
                        android:layout_toLeftOf="@+id/iv_sales_area"
                        android:textColor="#FF5755"
                        android:textSize="14sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="14dp"
                    android:background="#F5F5F5" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="品牌"
                        android:textColor="@color/color_333333"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_car_brand"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/more_gray" />

                    <TextView
                        android:id="@+id/tv_car_brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="14dp"
                        android:layout_toLeftOf="@+id/iv_car_brand"
                        android:textColor="#FF5755"
                        android:textSize="14sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="14dp"
                    android:background="#F5F5F5" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="车型"
                        android:textColor="@color/color_333333"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_car_model"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/more_gray" />

                    <TextView
                        android:id="@+id/tv_car_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="14dp"
                        android:layout_toLeftOf="@+id/iv_car_model"
                        android:textColor="#FF5755"
                        android:textSize="14sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="14dp"
                    android:background="#F5F5F5" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="年份"
                        android:textColor="@color/color_333333"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/tv_year_all"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/ll_choose_year"
                        android:background="@drawable/bg_radiobutton"
                        android:gravity="center"
                        android:text="不限" />


                    <LinearLayout
                        android:id="@+id/ll_choose_year"
                        android:layout_width="114dp"
                        android:layout_height="32dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_radiobutton"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_last"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:padding="6dp"
                            android:src="@mipmap/last" />

                        <TextView
                            android:id="@+id/tv_year"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="2018"
                            android:textColor="#333333"
                            android:textSize="13sp" />

                        <ImageView
                            android:id="@+id/img_next"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:padding="6dp"
                            android:src="@mipmap/next" />

                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="14dp"
                    android:background="#F5F5F5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginRight="14dp"
                    android:gravity="center"
                    android:text="车源价"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="14dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:background="@drawable/bg_radiobutton_selector"
                        android:gravity="center"
                        android:hint="最低价"
                        android:inputType="number"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="~"
                        android:textColor="#333333"
                        android:textSize="12sp" />

                    <EditText
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:background="@drawable/bg_radiobutton_selector"
                        android:gravity="center"
                        android:hint="最高价"
                        android:inputType="number"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="14dp"
                        android:gravity="center"
                        android:text="万"
                        android:textColor="#333333"
                        android:textSize="12sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="14dp"
                    android:background="#F5F5F5" />

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/tag_flow_price"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:max_select="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginRight="14dp"
                    android:gravity="center"
                    android:text="库存时间"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp" />

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/tag_flow_time"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    app:max_select="1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="14dp"
                    android:background="#F5F5F5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginRight="14dp"
                    android:gravity="center"
                    android:text="外观颜色"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp" />


                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/tag_flow_out_color"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    app:max_select="1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="14dp"
                    android:background="#F5F5F5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginRight="14dp"
                    android:gravity="center"
                    android:text="内饰颜色"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp" />


                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/tag_flow_inside_color"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    app:max_select="1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="14dp"
                    android:background="#F5F5F5" />

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="40dp"-->
                <!--android:layout_marginRight="14dp"-->
                <!--android:gravity="center"-->
                <!--android:text="车型"-->
                <!--android:textColor="@color/color_333333"-->
                <!--android:textSize="14sp" />-->

                <!--<com.zhy.view.flowlayout.TagFlowLayout-->
                <!--android:id="@+id/tag_flow_car_type"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="160dp"-->
                <!--app:max_select="1" />-->

                <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:layout_marginRight="14dp"-->
                <!--android:layout_marginTop="14dp"-->
                <!--android:background="#F5F5F5" />-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginRight="14dp"
                    android:gravity="center"
                    android:text="车源类型"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp" />

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/tag_flow_car_source_type"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    app:max_select="1" />

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/bt_search_reset"
                android:layout_width="131dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_radiobutton"
                android:text="重置" />

            <Button
                android:id="@+id/bt_search_sure"
                android:layout_width="131dp"
                android:layout_height="40dp"
                android:background="@mipmap/home_bg"
                android:text="确定" />
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
