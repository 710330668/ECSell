<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context="com.example.com.careasysell.dealer.ui.activity.AllSourceSearchActivity">


    <EditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="57dp"
        android:layout_marginTop="8dp"
        android:background="#F2F2F2"
        android:drawableLeft="@mipmap/search"
        android:paddingLeft="20dp"
        android:text="车牌型号/VIN号/车辆编号"
        android:textColor="#999999"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:text="取消"
        android:textColor="#999999"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_search"
        app:layout_constraintLeft_toRightOf="@id/et_search" />


    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tab_search_result"
        android:layout_marginTop="8dp"
        app:tl_tab_space_equal="true"
        android:background="#FFFFFF"
        app:tl_indicator_width_equal_title="true"
        app:tl_textSelectColor="@color/color_FF5754"
        app:tl_textUnselectColor="@color/color_333333"
        app:layout_constraintTop_toBottomOf="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>


    <View
        android:background="#F5F5F5"
        app:layout_constraintTop_toBottomOf="@id/tab_search_result"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_content"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/tab_search_result"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

</android.support.constraint.ConstraintLayout>