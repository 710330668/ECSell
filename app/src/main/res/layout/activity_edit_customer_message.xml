<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".dealer.ui.activity.EditCustomerMessageActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="14dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="修改客户信息"
            android:textColor="#333333"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:gravity="center"
            android:text="姓名"
            android:textColor="#333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_message_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="90dp"
            android:background="@drawable/drawable_empty"
            android:gravity="center"
            android:lines="1"
            android:textColor="#888888" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:gravity="center"
            android:text="手机"
            android:textColor="#333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_message_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="90dp"
            android:background="@drawable/drawable_empty"
            android:gravity="center"
            android:lines="1"
            android:textColor="#888888" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:gravity="center"
            android:text="微信"
            android:textColor="#333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_message_wechat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="90dp"
            android:background="@drawable/drawable_empty"
            android:gravity="center"
            android:lines="1"
            android:textColor="#888888" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:gravity="center"
            android:text="性别"
            android:textColor="#333333"
            android:textSize="14sp" />


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="90dp"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dimens_9dp"
                android:background="@drawable/bg_rb_selector"
                android:button="@null"
                android:gravity="center"
                android:text="男"
                android:textColor="@drawable/text_color_radio_selector"
                android:textSize="12sp" />

            <RadioButton
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_rb_selector"
                android:button="@null"
                android:gravity="center"
                android:text="女"
                android:textColor="@drawable/text_color_radio_selector"
                android:textSize="12sp" />
        </RadioGroup>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_save"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:background="@mipmap/home_bg"
        android:gravity="center"
        android:text="保存"
        android:textColor="#FFFFFF" />

</LinearLayout>